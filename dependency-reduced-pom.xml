<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.dpsoftware</groupId>
  <artifactId>FastScreenCapture</artifactId>
  <version>0.2.1</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.plugin.version}</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <annotationProcessorPaths>
            <path>
              <groupId>org.projectlombok</groupId>
              <artifactId>lombok</artifactId>
              <version>${lombok.version}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>${javafx.maven.plugin.version}</version>
        <configuration>
          <mainClass>org.dpsoftware.FastScreenCapture</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.version}</version>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <mainClass>org.dpsoftware.FastScreenCapture</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub Packages</name>
      <url>https://maven.pkg.github.com/sblantipodi/JavaFastScreenCapture</url>
    </repository>
  </distributionManagement>
  <properties>
    <nrjavaserial.version>5.2.1</nrjavaserial.version>
    <maven.compiler.version>3.8.1</maven.compiler.version>
    <maven.shade.version>3.2.1</maven.shade.version>
    <java.version>14</java.version>
    <javafx.maven.plugin.version>0.0.4</javafx.maven.plugin.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <jackson.version>2.11.1</jackson.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <paho.version>1.2.5</paho.version>
    <lombok.version>1.18.12</lombok.version>
    <gstreamer.version>1.2.0</gstreamer.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <mapstruct.version>1.3.1.Final</mapstruct.version>
    <maven.compiler.plugin.version>3.8.1</maven.compiler.plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>14</javafx.version>
    <logback.version>1.2.3</logback.version>
    <jna.version>5.6.0</jna.version>
  </properties>
</project>
